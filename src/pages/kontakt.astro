---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Kontakt Egedal Bogholderi">
  <Header />

  <main class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Kontakt mig</h1>
        <p class="text-xl text-gray-600">Jeg vender tilbage inden for 24 timer</p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-semibold mb-6">Kontaktinformation</h2>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <span class="text-2xl">ðŸ“ž</span>
              </div>
              <div>
                <a href="tel:22474494" class="text-gray-600 hover:text-primary text-lg">22 47 44 94</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <span class="text-2xl">ðŸ“§</span>
              </div>
              <div>
                <a href="mailto:Gitte@egedalbogholderi.dk" class="text-gray-600 hover:text-primary">Gitte@egedalbogholderi.dk</a>
              </div>
            </div>
          </div>

          <div class="mt-8 p-6 bg-accent/5 border border-accent/20 rounded-xl">
            <h3 class="font-semibold text-accent mb-2">Pris</h3>
            <p class="text-gray-600">450 kr + moms pr. pÃ¥begyndt time</p>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white border border-gray-200 rounded-2xl p-8">
          <h2 class="text-2xl font-semibold mb-6">Send en besked</h2>
          
          <form id="contact-form" class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Navn</label>
              <input type="text" id="name" name="name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent" placeholder="Dit navn"/>
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Telefon</label>
              <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent" placeholder="Dit telefonnummer"/>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent" placeholder="din@email.dk"/>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Besked</label>
              <textarea id="message" name="message" rows="4" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent" placeholder="Din besked..."></textarea>
            </div>

            <button type="submit" id="submit-btn" class="w-full px-6 py-3 bg-accent text-white font-semibold rounded-lg hover:bg-accent-dark transition-colors">
              Send besked
            </button>
          </form>

          <p class="text-xs text-gray-500 mt-4">Ved at sende accepterer du vores privatlivspolitik.</p>
        </div>
      </div>
    </div>
  </main>

  <Footer />

  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
  <script type="text/javascript">
    (function() {
      emailjs.init({
        publicKey: "I9b4cVln2NGxUo5sn",
      });
    })();

    document.getElementById('contact-form').addEventListener('submit', function(event) {
      event.preventDefault();
      const btn = document.getElementById('submit-btn');
      btn.textContent = 'Sender...';
      btn.disabled = true;

      emailjs.sendForm('service_p3s4ivc', 'template_6k356wh', this)
        .then(() => {
          alert('Tak for din besked! Jeg vender tilbage inden for 24 timer.');
          this.reset();
          btn.textContent = 'Send besked';
          btn.disabled = false;
        }, (error) => {
          alert('Der skete en fejl. PrÃ¸v igen eller send en email direkte til Gitte@egedalbogholderi.dk');
          console.log('FAILED...', error);
          btn.textContent = 'Send besked';
          btn.disabled = false;
        });
    });
  </script>
</Layout>