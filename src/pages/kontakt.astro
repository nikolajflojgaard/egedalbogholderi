---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Kontakt Egedal Bogholderi",
  "description": "Kontakt Egedal Bogholderi for professionel bogføring. Telefon: +45 30 40 44 94. Email: Gitte@egedalbogholderi.dk",
  "url": "https://egedalbogholderi.dk/kontakt.html",
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": "Egedal Bogholderi",
    "telephone": "+4530404494",
    "email": "Gitte@egedalbogholderi.dk",
    "areaServed": "Egedal"
  }
};

const title = "Kontakt Egedal Bogholderi - Få et tilbud på bogføring";
const description = "Kontakt Egedal Bogholderi på telefon +45 30 40 44 94 eller email Gitte@egedalbogholderi.dk. Jeg vender tilbage inden for 24 timer.";
const keywords = "kontakt bogholder egedal, bogholder telefon, bogholder email, få tilbud bogføring";
const canonical = "https://egedalbogholderi.dk/kontakt.html";
---

<Layout 
  title={title} 
  description={description}
  keywords={keywords}
  canonical={canonical}
  schema={schema}
>
  <Header />

  <main class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="text-sm text-gray-500 mb-8" aria-label="Brødkrummer">
        <a href="index.html" class="hover:text-primary">Forside</a>
        <span class="mx-2">/</span>
        <span>Kontakt</span>
      </nav>

      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Kontakt mig</h1>
        <p class="text-xl text-gray-600">Jeg vender tilbage inden for 24 timer</p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-semibold mb-6">Kontaktinformation</h2>
          
          <address class="not-italic space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <a href="tel:+4530404494" class="text-gray-600 hover:text-primary text-lg">+45 30 40 44 94</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <a href="mailto:Gitte@egedalbogholderi.dk" class="text-gray-600 hover:text-primary">Gitte@egedalbogholderi.dk</a>
              </div>
            </div>
          </address>

          <div class="mt-8 p-6 bg-accent/5 border border-accent/20 rounded-xl">
            <h3 class="font-semibold text-accent mb-2">Pris</h3>
            <p class="text-gray-600">450 kr + moms pr. påbegyndt time</p>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white border border-gray-200 rounded-2xl p-8">
          <h2 class="text-2xl font-semibold mb-6">Send en besked</h2>
          
          <form id="contact-form" class="space-y-4" aria-label="Kontaktformular">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Navn</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent" 
                placeholder="Dit navn"
                autocomplete="name"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Telefon</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent" 
                placeholder="Dit telefonnummer"
                autocomplete="tel"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent" 
                placeholder="din@email.dk"
                autocomplete="email"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Besked</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                required 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent" 
                placeholder="Din besked..."
              ></textarea>
            </div>

            <button 
              type="submit" 
              id="submit-btn" 
              class="w-full px-6 py-3 bg-accent text-white font-semibold rounded-lg hover:bg-accent-dark transition-colors"
            >
              Send besked
            </button>
          </form>

          <p class="text-xs text-gray-500 mt-4">Ved at sende accepterer du vores privatlivspolitik.</p>
        </div>
      </div>
    </div>
  </main>

  <Footer />

  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
  <script type="text/javascript">
    (function() {
      emailjs.init({
        publicKey: "I9b4cVln2NGxUo5sn",
      });
    })();

    document.getElementById('contact-form').addEventListener('submit', function(event) {
      event.preventDefault();
      const btn = document.getElementById('submit-btn');
      btn.textContent = 'Sender...';
      btn.disabled = true;

      emailjs.sendForm('service_p3s4ivc', 'template_6k356wh', this)
        .then(() => {
          alert('Tak for din besked! Jeg vender tilbage inden for 24 timer.');
          this.reset();
          btn.textContent = 'Send besked';
          btn.disabled = false;
        }, (error) => {
          alert('Der skete en fejl. Prøv igen eller send en email direkte til Gitte@egedalbogholderi.dk');
          console.log('FAILED...', error);
          btn.textContent = 'Send besked';
          btn.disabled = false;
        });
    });
  </script>
</Layout>